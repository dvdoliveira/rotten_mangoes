<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<%= form_tag movies_path, method: :get do %>
  <%= label_tag 'Filters' %>
  <div class="form-group">
    <%= text_field_tag 'search[query]', @query, placeholder: 'Title/Director', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Between' %>
    <%= number_field_tag 'search[duration_a]', @duration_a, class: 'duration form-control' %>
    <%= label_tag 'and' %>
    <%= number_field_tag 'search[duration_b]', @duration_b, class: 'duration form-control' %>
    <%= label_tag 'minutes' %>
  </div>
  |
  <div class="form-group">
    <%= label_tag 'Sort By:' %>
    <%= select_tag 'order_by',
      options_for_select([['Title', 'title'],['Release Date', 'release_date'],['Length', 'runtime_in_minutes']]), { class: 'form-control' }  %>
  </div>
  <%= submit_tag "Update", name: nil, class: 'btn btn-default' %>
<% end %>
<hr>
<%= render @movies %>

