<%= form_for @movie, :html => { :multipart => true } do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "release_date" %><br>
    <%= f.date_field "release_date" %>
  </div>
  <div>
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div>
    <%= f.label "runtime_in_minutes" %><br>
    <%= f.number_field "runtime_in_minutes" %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div>
    <%= fields_for (@movie_genres) do |mg| %>
      <%= mg.label "Genres" %>
      <%= collection_select(:genres, :id, @all_genres, :id, :name, {}, {multiple: true} ) %>
    <% end %>
  </div>

  <hr />
  <div>
    <strong>Add Movie Poster</strong><br>
  </div>
  <div>
    <%= f.file_field "movie_poster" %><br>
  </div>
  <div>
    <strong>Or</strong> <%= f.label "remote_movie_poster_url" %><br>
    <%= f.text_field "remote_movie_poster_url" %>
  </div>
  <br>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>